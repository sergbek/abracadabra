<?xml version="1.0" encoding="utf-8"?>
<com.myboxandroid.ui.custom.NetworkContainer xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/networkContainer_FLC"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btnNext_FLC"
            android:layout_width="match_parent"
            android:layout_height="@dimen/button_height"
            android:layout_alignParentBottom="true"
            android:text="@string/next" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rvListCities_FLC"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:overScrollMode="never"
            android:padding="10dp"
            android:scrollbarAlwaysDrawVerticalTrack="true"
            android:scrollbars="vertical" />

    </RelativeLayout>

</com.myboxandroid.ui.custom.NetworkContainer>