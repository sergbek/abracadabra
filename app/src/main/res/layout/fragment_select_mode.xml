<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:background="@color/color_red_600">


    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">


        <com.myboxandroid.ui.custom.HoneyCombView
            android:id="@+id/btnSmartLockerService_FSM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_honeycomb_mode"
            android:focusable="true"
            android:visibility="gone"
            app:color="@color/color_honeycomb_mode"
            app:image="@drawable/img_mode_smart"
            app:state="stroke"
            app:text="Smart Locker\n Service"
            app:textColor="@color/color_honeycomb_text"
            app:textSize="15sp"
            app:titleTypeFace="fonts/Demi.otf"
            tools:visibility="visible"/>


        <com.myboxandroid.ui.custom.HoneyCombView
            android:id="@+id/btnHomePickUp_FSM"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/bg_honeycomb_mode"
            android:focusable="true"
            android:visibility="gone"
            app:color="@color/color_honeycomb_mode"
            app:image="@drawable/img_mode_pickup"
            app:state="stroke"
            app:text="Home pick-up\n &#038; Delivery"
            app:textColor="@color/color_honeycomb_text"
            app:textSize="15sp"
            app:titleTypeFace="fonts/Demi.otf"
            tools:visibility="visible"/>
    </RadioGroup>

    <FrameLayout
        android:id="@+id/containerTest_FSM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
